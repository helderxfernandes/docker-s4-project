{
  "AWSEBDockerrunVersion": 1,
  "volumes": [
    {
      "name": "php",
      "image": "php:7.2-apache",
      "host": {
        "sourcePath": "/var/www/html"
      }
    }
  ],
  "containerDefinitions": [

    {
      "name": "php",
      "image": "php:7.2-apache",
      "mountPoints": [
        {
          "sourceVolume": "php",
          "containerPath": "/var/www/html"
        }
    }

  ]
}